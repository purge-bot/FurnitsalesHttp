@model IEnumerable<Order>

    <div>
        <table>
            <tr><th>Id</th><th>Name</th></tr>
            @foreach (var item in Model)
	        {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ManagerName</td>
                    <td><a asp-action="EditOrder" asp-route-orderId="@item.Id" class="btn btn-secondary">Edit</a></td>
                </tr>
	        }
        </table>

    </div>

    <a class="btn btn-primary" asp-action="CreateOrder">Create</a>